{
  "name": "claude-skill-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:local": "./start-dev.sh",
    "dev:web": "npm run dev -w apps/web",
    "dev:gateway": "npm run dev -w apps/gateway",
    "dev:node-service": "npm run dev -w apps/node-service",
    "build": "npm run build -w packages/shared-types && npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
